<div class="detail detail-{{category}}" style="background-image:url('<%= image %>');">
  <div class="detail-shadow">
    <p class="detail-icon">
      <span class="{{getCategoryProperty category 'icon'}}"></span> <span class="detail-icon-text">{{getCategoryProperty category 'description'}}</span>
    </p>
    <a href="#" class="detail-close bc-{{category}}" data-link-close data-category="{{category}}">
      <i class="material-icons">close</i>
    </a>
    <section class="detail-content">
      {{{data.content.large}}}
    </section>
    <footer class="detail-footer bcs-{{category}}">
      <div class="detail-footer-description">
        <p>Otras</p>
        <p>ofertas</p>
        <p>interesantes</p>
      </div>
      <div class="detail-adverts">
        <div class="detail-advert">
          <a href="" class="detail-advert-link" data-link-detail style="background-image:url('../images/ads/drinks_1.jpg');"></a>
          Agua mineral
        </div>
        <div class="detail-advert">
          <a href="" class="detail-advert-link" data-link-detail style="background-image:url('../images/ads/drinks_2.jpg');"></a>
          Vinos de crianza
        </div>
        <div class="detail-advert">
          <a href="" class="detail-advert-link" data-link-detail style="background-image:url('../images/ads/drinks_3.jpg');"></a>
          Cafés arábigos
        </div>
      </div>
    </footer>
  </div>
</div>
