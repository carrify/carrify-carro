<div class="detail detail-{{category}}" style="background-image:url('{{content.image}}');">
  <div class="detail-shadow">
    <p class="detail-icon">
      <span class="{{getCategoryProperty category 'icon'}}"></span> <span class="detail-icon-text">{{getCategoryProperty category 'description'}}</span>
    </p>
    <a href="javascript:void(0);" class="detail-close bc-{{category}}" data-link-close data-category="{{category}}">
      <i class="material-icons">close</i>
    </a>
    <section class="detail-content">
      {{{content.content.large}}}
    </section>
    <footer class="detail-footer">
      <div class="detail-footer-wrapper bcs-{{category}}">
        <div class="detail-footer-description">
          <p>Otras</p>
          <p>ofertas</p>
          <p>interesantes</p>
        </div>
      </div>
      <div class="detail-footer-carousel swiper-container">
        <div class="detail-adverts swiper-wrapper" id="detail_carousel_container" data-carousel="{{category}}" data-template="detail_carousel">
        </div>
      </div>
      </div>
    </footer>
  </div>
</div>
